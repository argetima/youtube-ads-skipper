{
    "name": "Youtube Skip Adds",
    "description": "When an add appears on the screen this extension skip it!",
    "version": "1.0",
    "manifest_version": 3,
    "icons": { 
      "16": "icons/skip16.png",
      "48": "icons/skip48.png",
      "128": "icons/skip128.png" },
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-script.js"],
            "match_about_blank": true,
            "all_frames": true,
            "run_at": "document_start"
        }
    ],
    "permissions": ["storage"]
  }